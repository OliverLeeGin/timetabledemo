<?xml version="1.0" encoding="utf-8"?>
<com.example.macintosh.timetabledemo.utils.ZoomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlTimetableContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#123456"
    tools:context="com.example.macintosh.timetabledemo.MainActivity">

    <RelativeLayout
        android:id="@+id/rlOclockContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#123456" />

    <RelativeLayout
        android:id="@+id/rlStagesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/rlOclockContainer"
        android:layout_toRightOf="@+id/rlOclockContainer"
        android:background="#acac" />

    <RelativeLayout
        android:id="@+id/rlTimeRulerContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlOclockContainer"
        android:background="#999" />

    <com.example.macintosh.timetabledemo.utils.ZoomLayout
        android:id="@+id/rlEventsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlStagesContainer"
        android:layout_toEndOf="@+id/rlTimeRulerContainer"
        android:layout_toRightOf="@+id/rlTimeRulerContainer" />
</com.example.macintosh.timetabledemo.utils.ZoomLayout>